        });
        $(function () {
            $("div.trick").slice(0, 4).show();
            var full_length = $( ".trick:visible" ).length +  $( ".trick:hidden" ).length;
            $("#loadMoreTrick").on('click', function (e) {
                e.preventDefault();
                $("div.trick:hidden").slice(0, 4).slideDown();
                if(full_length > 4){
                    $("#loadMoreTrick").show();
                }
                if(full_length == $("div.trick:visible").length){
                    $("#loadMoreTrick").hide('slow');
                }
                if($("div.trick:visible").length > 4){
                    $("#loadLessTrick").show('slow');
                }
                else{
                    $("#loadLessTrick").hide();
                }

            });
        });


    </script>
